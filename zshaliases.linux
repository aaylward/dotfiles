alias rm=’rm -i’
alias v='gvim'
alias vi='gvim'
alias deps='mvn dependency:analyze -DignoreNonCompile=true -DoutputXML=true'
alias open='xdg-open'

# mkdir, cd into it
mkcd () {
    mkdir -p "$*"
    cd "$*"
}

function image_pi_sd {
  touch "$1/ssh"
  echo "\ndtoverlay=dwc2\n" >> "$1/config.txt"
  sed -i '' 's/rootwait/& modules-load=dwc2,g_ether/' "$1/cmdline.txt"
}
